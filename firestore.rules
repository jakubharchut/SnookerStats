rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Reguła dla profili użytkowników
    match /users/{userId} {
      allow read, update: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow delete: if false;
    }

    // Reguły dla czatu
    match /chats/{chatId} {
      allow read, update: if request.auth.uid in resource.data.participants;
      allow create: if request.auth.uid in request.resource.data.participants;

      match /messages/{messageId} {
        allow read, create: if get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
        allow update, delete: if false;
      }
    }

    // NOWE REGUŁY DLA POWIADOMIEŃ
    match /notifications/{notificationId} {
      // Zezwól na odczyt, aktualizację i usuwanie, ale tylko własnych powiadomień
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      // Nikt nie może tworzyć powiadomień po stronie klienta (robią to Cloud Functions)
      allow create: if false;
    }
  }
}
